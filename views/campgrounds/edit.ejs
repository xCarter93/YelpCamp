<% layout('layouts/boilerplate')%>

<div class="row">
	<h1 class="text-center">Edit Campground</h1>
	<div class="col-6 offset-3">
		<form
			action="/campgrounds/<%=campground._id%>?_method=PUT  "
			method="POST"
			novalidate
			class="validated-form"
			enctype="multipart/form-data"
		>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="campground[title]"
					value="<%=campground.title%>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">
					Please enter the name of the campground.
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					id="location"
					name="campground[location]"
					value="<%=campground.location%>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">
					Please enter the location of the campground.
				</div>
			</div>
			<div class="mb-3">
				<div class="mb-3">
					<label for="formFileMultiple" class="form-label">Add Images</label>
					<input
						class="form-control"
						type="file"
						id="formFileMultiple"
						name="image"
						multiple
					/>
				</div>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">
					Please upload an image for the campground.
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Campground Price</label>
				<div class="input-group">
					<span class="input-group-text" id="basic-addon1">$</span>
					<input
						type="text"
						class="form-control"
						placeholder="00.00"
						aria-label="price"
						aria-describedby="basic-addon1"
						id="price"
						name="campground[price]"
						value="<%=campground.price%>"
						required
					/>
					<div class="valid-feedback">Looks good!</div>
					<div class="invalid-feedback">
						Please enter the nightly price of the campground.
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea
					class="form-control"
					type="text"
					id="description"
					name="campground[description]"
					required
				>
<%=campground.description%></textarea
				>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">
					Please provide a description of the campground.
				</div>
			</div>
			<div class="mb-3">
				<button class="btn btn-success">Update Campground</button>
			</div>
		</form>
		<a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
	</div>
	<div class="container mt-3">
		<div class="row">
			<% campground.images.forEach(function(img, i) { %>
			<div class="mb-3 col-sm text-center">
				<img src="<%= img.url %>" class="img-thumbnail" alt="" />
				<div class="form-check-inline">
					<input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= img.filename %>"/>
				</div>
				<label for="image-<%= i %>">Delete</label>
			</div>
			<% }) %>
		</div>
	</div>
</div>
